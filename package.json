{
  "name": "sharecode-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "start": "cross-env NODE_ENV=production node -r module-alias/register ./dist/bin/www",
    "build": "node etc/build"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "bin"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./bin/www"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cross-env": "^7.0.3",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "express": "~4.16.1",
    "log4js": "latest",
    "module-alias": "^2.2.2",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.10.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.4.3"
  },
  "_moduleAliases": {
    "@": "./dist/src"
  },
  "eslintIgnore": [
    "src/public/"
  ]
}
